#lang racket

(define (gcd a b)
  (if (zero? b)
      a
      (gcd b (remainder a b))
  )
)

;; below is a slower solution intentionally not simulating iteration
(define (gcd-2 a b)
  
  (define (max a b) (if (> a b) a b))
  
  (define (helper a b div)
    (cond
      [(> div (max a b))
       1]
      
      [(and (zero? (remainder a div)) (zero? (remainder b div)))
       (* div (helper (quotient a div) (quotient b div) div))]
      
      [else
       (helper a b (+ div 1))]
    )
  )

  (helper a b  2)
)